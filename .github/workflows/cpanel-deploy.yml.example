name: Deploy to cPanel

on:
  push:
    branches: [ main, production ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
    
    # Build Frontend
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
        cache-dependency-path: frontend/package-lock.json
    
    - name: Build Frontend
      working-directory: frontend
      env:
        REACT_APP_API_URL: ${{ secrets.REACT_APP_API_URL }}
        REACT_APP_RAZORPAY_KEY_ID: ${{ secrets.RAZORPAY_KEY_ID }}
      run: |
        npm ci
        npm run build
    
    # Prepare Backend
    - name: Prepare Backend
      run: |
        cd backend
        # Create production .env from secrets
        cat > .env <<EOF
        APP_NAME="${{ secrets.APP_NAME }}"
        APP_ENV=production
        APP_KEY=${{ secrets.APP_KEY }}
        APP_DEBUG=false
        APP_URL=${{ secrets.APP_URL }}
        
        DB_CONNECTION=mysql
        DB_HOST=localhost
        DB_PORT=3306
        DB_DATABASE=${{ secrets.DB_DATABASE }}
        DB_USERNAME=${{ secrets.DB_USERNAME }}
        DB_PASSWORD=${{ secrets.DB_PASSWORD }}
        
        RAZORPAY_KEY_ID=${{ secrets.RAZORPAY_KEY_ID }}
        RAZORPAY_KEY_SECRET=${{ secrets.RAZORPAY_KEY_SECRET }}
        RAZORPAY_CURRENCY=INR
        
        SANCTUM_STATEFUL_DOMAINS=${{ secrets.SANCTUM_STATEFUL_DOMAINS }}
        SESSION_DOMAIN=${{ secrets.SESSION_DOMAIN }}
        FRONTEND_URL=${{ secrets.FRONTEND_URL }}
        EOF
    
    # Deploy via SSH
    - name: Deploy to cPanel via SSH
      uses: appleboy/scp-action@v0.1.4
      with:
        host: ${{ secrets.CPANEL_HOST }}
        username: ${{ secrets.CPANEL_USERNAME }}
        key: ${{ secrets.SSH_PRIVATE_KEY }}
        source: "frontend/build/*,backend/*"
        target: "/home/${{ secrets.CPANEL_USERNAME }}/deployment"
        strip_components: 1
    
    - name: Run deployment commands
      uses: appleboy/ssh-action@v1.0.0
      with:
        host: ${{ secrets.CPANEL_HOST }}
        username: ${{ secrets.CPANEL_USERNAME }}
        key: ${{ secrets.SSH_PRIVATE_KEY }}
        script: |
          # Deploy Frontend
          rm -rf ~/public_html/*
          cp -r ~/deployment/build/* ~/public_html/
          
          # Deploy Backend
          rsync -av ~/deployment/backend/ ~/donation-backend/ --exclude=storage --exclude=vendor
          
          # Backend setup
          cd ~/donation-backend
          composer install --no-dev --optimize-autoloader
          php artisan migrate --force
          php artisan config:cache
          php artisan route:cache
          php artisan view:cache
          
          # Set permissions
          chmod -R 755 storage bootstrap/cache
          chmod 600 .env
          
          echo "âœ… Deployment complete!"
