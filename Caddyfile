localhost {
    # Frontend - React app
    handle /* {
        reverse_proxy frontend:3000
    }

    # Backend API - Laravel
    handle /api/* {
        reverse_proxy backend:9000 {
            transport fastcgi {
                root /var/www/public
            }
        }
    }

    # Laravel public assets
    handle /storage/* {
        reverse_proxy backend:9000 {
            transport fastcgi {
                root /var/www/public
            }
        }
    }

    # Enable compression
    encode gzip

    # Logs
    log {
        output stdout
        format console
    }
}
