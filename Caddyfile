# Caddyfile for Donation App
# Automatic HTTPS with Let's Encrypt

{
    email admin@donationapp.ddns.net
}

donationapp.ddns.net {
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "no-referrer-when-downgrade"
    }

    # Rate limiting for login
    @admin_login {
        path /api/admin/login
    }
    rate_limit @admin_login {
        zone admin_login_zone
        window 1m
        events 5
    }

    # Rate limiting for API
    @api {
        path /api/*
    }
    rate_limit @api {
        zone api_zone
        window 1s
        events 10
    }

    # API endpoints (proxy to backend)
    handle /api/* {
        reverse_proxy backend-nginx:80 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Frontend application (React SPA)
    handle {
        reverse_proxy frontend:80 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # Enable compression
    encode gzip zstd

    # Set file server for static assets with caching
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static {
        Cache-Control "public, max-age=31536000, immutable"
    }
}

# Redirect www to non-www
www.donationapp.ddns.net {
    redir https://donationapp.ddns.net{uri} permanent
}
